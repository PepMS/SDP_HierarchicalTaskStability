classdef (Abstract) Task
    properties
        robot; % Task Owner
        dim;   % Task space dimension
        pri;   % Priority of the task
        r_des; % Desired task value
    end
    
    methods
        function obj = Task(robot_, pri_, r_des_)
            try
                if isa(robot_, 'SerialLink')
                    obj.robot = robot_;
                else
                    error(' ');
                end
            catch
                error('Pass, at least, a SerialLink object as a first argument');
            end
            if nargin == 1
                obj.dim = 1;
                obj.pri = 1;
                obj.r_des = zeros(dim_, 1);
            elseif nargin == 2
                obj.dim = dim_;
                obj.pri = 1;
                obj.r_des = zeros(dim_, 1);
            else
                obj.dim = dim_;
                obj.pri = pri_;
                if length(r_des_) == dim_
                    obj.r_des = r_des_;
                else
                    obj.r_des = zeros(dim_, 1);
                    error('Specified desired value must have the indicated task dimension');
                end
            end
        end
    end
    
    methods(Abstract)
        J = getTaskJacobian(obj, q);
        e = getTaskError(obj, q);
    end
end
